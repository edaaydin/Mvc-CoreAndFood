<!DOCTYPE html>
<html lang="en">
<head>
    <title>Core And Food</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Sol Taraf: Core And Food -->
                <a class="navbar-brand" href="#">Core And Food</a>

                <!-- Toggle Button for Small Screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Sağ Taraf: Menü -->
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Category">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Food">Food</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Chart">Google Pie Chart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index2" asp-controller="Chart">Google Column Chart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index3" asp-controller="Chart">Google Dynamic Chart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pop-Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Statistics" asp-controller="Chart">Statistics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="LogOut" asp-controller="Login">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>


