@model Category

@{
    ViewData["Title"] = "CategoryAdd";
}

<div class="row">
    <form asp-action="CategoryAdd" method="post">

        <div class="form-group">
            <b> <label>Category Name</label></b>
            <input asp-for="CategoryName" type="text" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <b> <label>Category Description</label></b>
            <input asp-for="CategoryDescription" type="text" class="form-control" />
        </div>

        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-info">Save</button>
        </div>
    </form>
</div>