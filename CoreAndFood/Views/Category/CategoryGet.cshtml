@model Category

@{
    ViewData["Title"] = "CategoryGet";
}

<div class="row">
    <form asp-action="CategoryUpdate" method="post">
        <div class="col-md-5W">
            <div class="form-group">
                <b> <label>Category Id</label></b>
                <input asp-for="CategoryId" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Category Name</label></b>
                <input asp-for="CategoryName" type="text" asp-validation-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b> <label>Category Description</label></b>
                <input asp-for="CategoryDescription" type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-warning">Update</button>
        </div>
    </form>
</div>

