@model ProductsAdd

@{
    ViewData["Title"] = "FoodAdd";
}

<div class="row">

    <form asp-action="FoodAdd" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <b> <label>Food Name</label></b>
            <input asp-for="FoodName" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <b> <label>Price</label></b>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <b> <label>Stock</label></b>
            <input asp-for="Stock" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <b> <label>Choose Image</label></b>
            <input asp-for="ImageUrl" type="file" class="form-control" />
        </div>
        <div class="form-group">
            <b> <label>Category</label></b>
            <select asp-for=CategoryId asp-items="@ViewBag.value" type="text" class="form-select">
                <option disabled selected>Select Category</option>
            </select>
        </div>

        @*         <div class="form-group">
            <b> <label>Description</label></b>
            <textarea asp-for="Description" type="text" class="form-control"></textarea>
        </div> *@

        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </form>

</div>

