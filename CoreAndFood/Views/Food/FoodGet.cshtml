@model Food

@{
    ViewData["Title"] = "FoodGet";
}

<div class="row">

    <form asp-action="FoodGet" method="post">
        <div class="col-md-5W">

            <div class="form-group">
                <b> <label>Food Id</label></b>
                <input asp-for="FoodId" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Food Name</label></b>
                <input asp-for="FoodName" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Price</label></b>
                <input asp-for="Price" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Stock</label></b>
                <input asp-for="Stock" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Choose Image</label></b>
                <input asp-for="ImageUrl" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <b> <label>Category</label></b>
                @*  <input asp-for="CategoryId" type="text" class="form-control" /> *@
                <select asp-for=CategoryId asp-items="@ViewBag.value" type="text" class="form-select">
                    <option disabled selected>Select Category</option>
                </select>
            </div>
            @*             <div class="form-group">
                <b><label asp-for="CategoryId">Category</label></b>
                <select asp-for="CategoryId" asp-items="Model.Category" class="form-select">
                    <option disabled selected>Select Category</option>
                </select>
            </div> *@

            <div class="form-group">
                <b> <label>Description</label></b>
                <textarea asp-for="Description" type="text" class="form-control"></textarea>
            </div>
        </div>
        <br />
        <div class="form-group">
            <button asp-action="FoodUpdate" asp-controller="Food" type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>

</div>
